
<html lang="en">
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css">
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Atakan Gul's Blog Page</title>
</head>
<body>
  <%- include('../partials/headers/headerUnAuth.ejs') %>

  <% if (typeof successMessage !== 'undefined') { %>
    <div class="alert alert-success" role="alert">
      <h4 class="alert-heading">✅ Başarılı</h4>
      <hr>
      <p class="mb-0"><%= successMessage %></p>
    </div>
  <% } %>

  <div class="container">
    <h1 class="my-4">Bloglar</h1>
    <% data.forEach(post => { %>
      <div class="post row">
        <div class="col-10">
          <h3><a href="/blogs/<%= post._id %>"><%= post.title %></a></h3>
          <p class="post-meta">Posted on <%= post.createdAt %></p>
        </div>
        <div class="col-2 text-end">
          <button class="btn btn-primary">Edit</button>
          <button class="btn btn-danger">Delete</button>
        </div>
      </div>
    <% }) %>
  </div>
  
  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

