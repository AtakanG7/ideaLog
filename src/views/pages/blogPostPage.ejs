<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
  <meta charset="UTF-8">
  <title>Blog Post Creation</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/css/style.css" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <style>
    #editor {
      width: 524px;
      min-height: 100vh !important;
      height: auto !important;
      margin: 0 auto;
    }
  </style>
  <link href="https://cdn.jsdelivr.net/npm/quill@2/dist/quill.snow.css" rel="stylesheet"/>
</head>
<body>
  <% if (isAdmin) { %>  
    <%- include('../partials/headers/headerAdmin.ejs') %>
  <% } else if (isAuthenticated) { %>
    <%- include('../partials/headers/headerAuth.ejs') %>
  <% } else { %>
    <%- include('../partials/headers/headerUnAuth.ejs') %>
  <% } %>
    <div class="mt-3"></div>
    <!-- Create the editor container -->
    <div id="editor"></div>
    <div class="container w-full p-0" style="width: 600px;">
      <button class="btn flex ms-auto m-4" onclick="my_modal_3.showModal()">Go on</button>
    </div>
    <dialog id="my_modal_3" class="modal">
      <div class="modal-box gap-2">
        <form method="dialog" id="blogForm">
          <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
          <h3 class="font-bold text-lg">I need them be careful :)</h3>
          <select name="category" required class="select select-ghost w-full max-w-xs">
            <option disabled selected>Pick a category</option>
            <option>programming</option>
            <option>technology</option>
            <option>javascript</option>
            <option>education</option>
            <option>lifestyle</option>
            <option>gaming</option>
            <option>AI</option>
            <option>other</option>
          </select>
          <select required name="status" class="select select-bordered w-full max-w-xs">
            <option disabled selected>Review</option>
          </select>
          <textarea name="description" required class="textarea textarea-secondary w-100" placeholder="Description"></textarea>
          <button type="button" class="btn" onclick="sendEditorContent()">Fire it :)</button>
        </form>
      </div>
    </dialog>

    <!-- Include the Quill library -->
    <script src="https://cdn.jsdelivr.net/npm/quill@2/dist/quill.js"></script>

    <!-- Initialize Quill editor -->
    <script>
      const quill = new Quill("#editor", {
        theme: "snow",
      });

      function getEditorContent() {
        return quill.root.innerHTML;
      }

      async function sendEditorContent() {
        const content = getEditorContent();
        const form = document.getElementById('blogForm');
        const formData = new FormData(form);
        const data = {
          content: content,
          category: formData.get('category'),
          status: formData.get('status'),
          description: formData.get('description')
        };
        
        console.log('Form Data:', data);

        const response = await fetch('/blogs', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
          body: JSON.stringify(data),
        });

        if (response.ok) {
          console.log('Content sent successfully');
          redirect('/blogs');
        } else {
          console.error('Failed to send content');
        }
      }
    </script>
</body>
</html>
