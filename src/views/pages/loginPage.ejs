    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background-color: #ffffff;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .login-box {
            max-width: 400px;
            width: 100%;
        }

        .login-container {
            display: flex;
            flex-direction: row;
            justify-content: center;
        }

        @media only screen and (max-width: 768px) {
            .login-container {
                margin-bottom: auto;
                margin-top: 3rem;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center align-items-center my-2" style="min-height: 85vh;">
            <span class="btn d-flex align-items-center justify-content-center" style="position: absolute; top: 1rem; left: 1rem; border-radius: 50px; z-index: 1; width: fit-content;">
                <a href="/"><svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left" style="color: #242121cc;"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg></a>
            </span>
            <div class="col-12 col-md-8 col-lg-6 login-container">
                <div class="login-box">
                    <form class="d-flex flex-column" action="/login" method="post">
                        <h2 class="text-center mb-3">Welcome ðŸ¤—</h2>
                        <div class="form-group mb-3">
                            <label for="email">Enter Your Mail</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="user123@gmail.com" style="height: 50px;">
                        </div>
                        <div class="form-group mb-3">
                            <label for="password">Enter Your Password</label>
                            <input type="password" class="form-control" id="password" name="password" placeholder="*****" style="height: 50px;">
                        </div>
                        <a class="mb-4" href="/signup">Doesn't have an account?</a>
                        <a href="/auth/google" class="btn btn-danger mb-3"><span class="fa fa-google"></span> SignIn with Google</a>
                        <button type="submit" class="btn btn-primary">Gir</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
